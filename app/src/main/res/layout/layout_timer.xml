<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgMinus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/reduce_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_minus" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/timer_screen"
        android:inputType="time"
        android:text="@string/fullpomotime"
        android:textAlignment="center"
        android:textColorHint="#78909C"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgPlus"
        app:layout_constraintStart_toEndOf="@+id/imgMinus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgPlus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/increase_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_plus" />
</androidx.constraintlayout.widget.ConstraintLayout>